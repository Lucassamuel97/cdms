<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', :new_admins_user, class: "btn btn-primary ml-auto" %>

<table class="table card-table table-striped table-vcenter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Register number</th>
      <th>Cpf</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.register_number %></td>
        <td><%= user.cpf %></td>
        <td><%= user.status %></td>
        <td><%= link_to 'Show', admins_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admins_user_path(user) %></td>
        <td><%= link_to 'Destroy', admins_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
