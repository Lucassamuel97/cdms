<%= simple_form_for([:admins, @department, @module]) do |f| %>
<div class="card-body">
  <div class="card-header">
    <h3 class="card-title"><%= t('activerecord.models.department_modules.one')%></h3>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :name %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :description %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-actions">
        <%= f.button :submit,  class: 'btn btn-success ml-auto' %>
      </div>
    </div>
  </div>
</div>  
<% end %>
