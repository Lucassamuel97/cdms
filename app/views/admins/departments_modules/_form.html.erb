<%= simple_form_for([:admins, @department, @departments_module], class: 'card-body') do |f| %>
  
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  
<% end %>
