<tr>
    <td><%= link_to "#{department.initials}", admins_department_path(department) %></td>
    <td><%= department.name %></td>
    <td><%= department.local %></td>
    <td><%= department.phone %></td>
    <td><%= department.email %></td>
    <td><%= link_to edit_admins_department_path(department) do%>
        <span class="icon mr-3" ><i class="fas fa-edit"></i></span>
    <%end%>
    </td>
    <td><%= link_to admins_department_path(department) ,
     method: :delete, data: { confirm: t('activerecord.attributes.attribute_commons.are_you_sure') } do%>
        <span class="icon mr-3" ><i class="fas fa-trash"></i></span>
    <%end%>
    </td>
</tr>