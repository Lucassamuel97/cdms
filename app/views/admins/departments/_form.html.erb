<%= simple_form_for(department, url: url_form, class: 'card-body') do |f| %>

  <%= f.error_notification %>
  
  <div class="form-group">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :sigla %>
    <%= f.input :local %>
    <%= f.input :phone %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
